<h1>Listing people</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Bio</th>
    <th>Birthday</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @people.each do |person| %>
  <tr>
    <td><%= person.name %></td>
    <td><%= person.bio %></td>
    <td><%= person.birthday %></td>
    <td><%= link_to 'Edit', edit_person_path(person) %></td>
    <td><%= button_to 'Destroy', person, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />


<div class="newbutton"><%= button_to_function "New Person", "Jnewaguy()" %></div>
<div class="discard"><%= button_to_function "Discard" ,"Jdiscard()"%></div>
<div class="newpersonevent"><%= render 'form' %></div>
<div class="editpersonevent"></div>
